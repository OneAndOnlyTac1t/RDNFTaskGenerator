<Window x:Class="TDNFGenerator.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDNFGenerator"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Вікно повідомлення" Height="250" Width="400">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="139" Margin="46,23,0,0" TextWrapping="Wrap" Text="{Binding DisplayText}" VerticalAlignment="Top" Width="315"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="166,193,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,174,0,0" TextWrapping="Wrap" Text="Це повідомлення заастосується для всіх завдань" VerticalAlignment="Top"/>
    </Grid>
</Window>
