<Window x:Class="TDNFGenerator.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDNFGenerator"
        ResizeMode="NoResize"

        mc:Ignorable="d"
        Title="Вікно перегляду" Height="250" Width="500">
    <Grid>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="101" Margin="20,23,0,0" TextWrapping="Wrap" Text="{Binding DisplayedTask}" VerticalAlignment="Top" Width="450"/>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="20" Margin="158,149,0,0" TextWrapping="Wrap" Text="{Binding Tdnf}" VerticalAlignment="Top" Width="126"/>
        <Label Content="Правильна відповідь:" HorizontalAlignment="Left" Margin="20,143,0,0" VerticalAlignment="Top" Width="133"/>
        <Button Content="Закрити" HorizontalAlignment="Left" Margin="209,180,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
